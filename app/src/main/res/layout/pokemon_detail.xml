<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pokemon_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.caxidy.listpokemon.PokemonDetailFragment">

    <TextView
        android:id="@+id/pok_detail_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/textAppearanceLarge"
        android:padding="16dp"
        android:textIsSelectable="true"/>

    <WebView
        android:id="@+id/pok_detail_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pok_detail_descripcion"/>

</RelativeLayout>